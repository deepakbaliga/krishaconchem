<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.deepakbaliga.krishnaconchem.MainActivity"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <android.support.v4.view.ViewPager
        android:id="@+id/aboutus_viewpager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#aa000000"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/circle"
            android:src="@drawable/logo"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="About US"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo"/>

    </RelativeLayout>



    <android.support.v7.widget.CardView
        android:id="@+id/second_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/top_relative_layout"
        android:elevation="20dp"
        app:cardCornerRadius="4dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/products_imageview"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#99000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Products"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="#fff"/>


    </RelativeLayout>
    </android.support.v7.widget.CardView>




    <LinearLayout
        android:id="@+id/last_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/second_card_layout"
        android:weightSum="2">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:elevation="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/research_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#99000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Research"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"/>


            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:elevation="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/publication_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#99000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publications"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/last_but_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/last_linear_layout"
        android:weightSum="2">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:elevation="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/major_users_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#99000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Major Users"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"/>


            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:elevation="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/certification_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#99000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Certifications"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/final_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/last_but_one"
        android:weightSum="2">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:elevation="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/technicaldatasheets_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#99000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Technical\nDatasheets"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"/>


            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:elevation="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/contact_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#99000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacts"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>





</RelativeLayout>
</ScrollView>